<div class="c-hero">
	{{#if imageLeft}}
		<div class="c-hero__image">
			<img src="{{imageSrc}}" alt=""/>
		</div>
		<div class="c-hero__content">
			<h1>{{title}}</h1>
			{{{content}}}
		</div>
	{{else}}
		<div class="c-hero__content">
			<h1>{{title}}</h1>
			{{{content}}}
		</div>
		<div class="c-hero__image">
			<img src="{{imageSrc}}" alt=""/>
		</div>
	{{/if}}
</div>
