<div class="c-hero"{{#if color}} style="background-color: {{color}}"{{/if}}>
	<div class="c-hero__content {{#if smallerImage}}c-hero__wide{{else}}c-hero__narrow{{/if}}">
		<h1>{{title}}</h1>
		{{#if content}}
			{{{content}}}
		{{/if}}
	</div>
	{{#if imageSrc}}
		<div class="c-hero__image {{#if smallerImage}}c-hero__narrow{{else}}c-hero__wide{{/if}}">
			<img src="{{imageSrc}}" alt="" />
		</div>
	{{/if}}
</div>
