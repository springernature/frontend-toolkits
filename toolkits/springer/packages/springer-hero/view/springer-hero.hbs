<div class="c-hero"{{#if color}} style="background-color: {{color}}"{{/if}}>
	{{#if imageLeft}}
		{{#if imageSrc}}
			<div class="c-hero__image">
				<img src="{{imageSrc}}" alt=""/>
			</div>
		{{/if}}
		<div class="c-hero__content">
			<h1>{{title}}</h1>
			{{#if content}}
				{{{content}}}
			{{/if}}
		</div>
	{{else}}
		<div class="c-hero__content">
			<h1>{{title}}</h1>
			{{#if content}}
				{{{content}}}
			{{/if}}
		</div>
		{{#if imageSrc}}
			<div class="c-hero__image">
				<img src="{{imageSrc}}" alt=""/>
			</div>
		{{/if}}
	{{/if}}
</div>
