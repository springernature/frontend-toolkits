<header class="c-header">
	<div class="c-header__container">
		{{#with logo}}
		<div class="c-header__brand">
			<a href="/" itemprop="url">
				<img alt="{{alt}}" itemprop="logo" width="112" height="30" role="img" src="{{src}}">
			</a>
		</div>
		{{/with}}
		<div class="c-header__navigation">
			{{#if searchUrl}}
			<a href="{{searchUrl}}" class="c-header__link c-header__link--search">
				<span class="u-flex u-flex-align-center">
					Search
					<svg class="c-icon u-margin-left-xs" width="14" height="14" aria-hidden="true" focusable="false">
						<use xlink:href="#icon-search"></use>
					</svg>
				</span>
			</a>
			{{/if}}

			{{#if menu}}
			<nav>
				<ul class="c-header__menu">
					{{#each menu}}
					<li class="c-header__item">
						<a class="c-header__link" href="{{url}}">{{label}}</a>
					</li>
					{{/each}}
				</ul>
			</nav>
			{{/if}}
		</div>
	</div>
</header>
