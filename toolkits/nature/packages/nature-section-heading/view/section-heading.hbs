<div class="c-section-heading {{no-bt}}">
	{{#if url}}
	<h2>
		<a href="{{url}}" class="c-section-heading__link">
			{{text}}
			<svg class="c-section-heading__icon" aria-hidden="true" focusable="false" height="16" width="16">
				<use xlink:href="{{chevronURL}}"></use>
			</svg>
		</a>
	</h2>
	{{else}}
	<h2>{{text}}</h2>
	{{/if}}
</div>
