<div class="c-card{{#if noShape}} c-card--no-shape{{/if}}{{#if dark}} c-card--dark{{/if}}">
	{{#if image}}
	<div class="c-card__image"{{#if aspectRatio}} style="--card--image-aspect-ratio: {{aspectRatio}}"{{/if}}>
		{{#with image}}
		<img src="{{src}}" alt="{{alt}}">
		{{/with}}
	</div>
	{{/if}}
    <div class="c-card__body">
		{{#if title}}
		<h3 class="c-card__title"{{#if level}} aria-level="{{level}}"{{/if}}>
			{{#if href}}
			<a class="c-card__link{{#if noBlockLinks}} c-card__link--no-block-link{{else}}{{#if noBlockLink}} c-card__link--no-block-link{{else}}{{/if}}{{/if}}" href="{{href}}">
			{{/if}}
			{{title}}
			{{#if href}}
			</a>
			{{/if}}
		</h3>
		{{/if}}
		{{#if summary}}
        <div class="c-card__summary">{{{summary}}}</div>
		{{/if}}
    </div>
</div>
