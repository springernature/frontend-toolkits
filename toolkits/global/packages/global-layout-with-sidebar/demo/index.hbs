<div class="c-with-sidebar">
	{{#if sidebar-on-left}}
		<div class="c-with-sidebar__sidebar">
			{{{sidebarContent}}}
		</div>
		<div>
			{{{mainContent}}}
		</div>
	{{else}}
		<div>
			{{{mainContent}}}
		</div>
		<div class="c-with-sidebar__sidebar">
			{{{sidebarContent}}}
		</div>
	{{/if}}
</div>

