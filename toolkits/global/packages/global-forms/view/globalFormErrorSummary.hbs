<aside class="c-forms__error-summary" aria-labelledby="{{id}}">
	<div class="c-forms__error-summary-icon">
		<span class="c-forms__icon c-forms__icon--error u-display-flex u-align-items-center">
			<svg class="u-icon u-mr-4" width="22" height="22" aria-hidden="true" focusable="false">
				{{> globalFormIconError }}
			</svg>
		</span>
	</div>
	<div class="c-forms__error-summary-text">
		<div class="c-forms__error-summary-title" id="{{id}}" tabindex="-1">{{title}}</div>
		{{#if errors}}
			<ul class="c-forms__error-summary-errors">
				{{#each errors}}
					<li>
						<a href="#{{id}}">{{error}}</a>
					</li>
				{{/each}}
			</ul>
		{{/if}}
	</div>
</aside>
