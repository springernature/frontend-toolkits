{{#if inputs}}
	<fieldset class="c-forms__fieldset c-forms__field c-forms__radios" {{#unless legend}} role="presentation"{{/unless}} {{> inputCommonAttributes}}>
		{{#if legend}}
			<legend class="c-forms__label">{{legend}}</legend>
		{{else}}
			{{#if label}}
				<legend class="c-forms__label">{{label}}</legend>
			{{/if}}
		{{/if}}
		{{#if error}}
			{{> error}}
		{{/if}}

		{{#each inputs}}
			{{> radio name=../name }}
		{{/each}}
	</fieldset>
{{/if}}
