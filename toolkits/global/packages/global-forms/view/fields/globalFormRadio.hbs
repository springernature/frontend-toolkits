<div class="c-forms__label c-forms__label--wrapper">
	<input class="c-forms__input c-forms__input--radio" type="radio" {{> globalFormAttributes}}>
	{{#if pictographic}}
		<label for="{{id}}" class="c-forms__label c-forms__label--pictographic-radio">
			{{{svg}}}
			<span class="c-form__label--visually-hidden">{{imageDescription}}</span>
			<span {{#unless showLabel}}class="c-form__label--visually-hidden"{{/unless}}><span class="c-form__label--visually-hidden"> The value of this radio input is: </span>{{label}}</span>
		</label>
	{{else}}
		<label for="{{id}}" class="c-forms__label c-forms__label--inline c-forms__label--radio">{{label}}</label>
	{{/if}}
	{{#if fields}}
		<fieldset class="c-forms__fieldset c-forms__sub-fields">
			{{#each fields}}
				<div class="c-forms__field">
					{{> (lookup . 'template')}}
				</div>
			{{/each}}
		</fieldset>
	{{/if}}
</div>
