{{#if inputs}}
	<fieldset class="c-forms__fieldset c-forms__field c-forms__radios" {{> globalFormAttributes}}>
		{{#if legend}}
			<legend class="c-forms__label">{{legend}}<span class="c-form__label--visually-hidden">{{#if groupDescription}}. {{groupDescription}}{{/if}}</span></legend>
		{{else}}
			{{#if label}}
				<legend class="c-forms__label">{{label}}<span class="c-form__label--visually-hidden">{{#if groupDescription}}. {{groupDescription}}{{/if}}</span></legend>
			{{/if}}
		{{/if}}
		{{#if error}}
			{{> globalFormError}}
		{{/if}}
		<div {{#if pictographic}}class="c-forms__pictographic-radios"{{/if}}>
			{{#each inputs}}
				{{> globalFormRadio name=../name pictographic=../pictographic boxed=../boxed}}
			{{/each}}
		</div>
	</fieldset>
{{/if}}
