{{> globalFormLabel}}
{{#if error}}
	{{> globalFormError}}
{{/if}}
<input type="text" class="c-forms__input c-forms__input--text"
	   {{> globalFormAttributes}}
>
{{#if datalist.options}}
	{{#if datalist.id}}
		<datalist id="{{datalist.id}}">
			{{#each datalist.options}}
				<option value="{{.}}"></option>
			{{/each}}
		</datalist>
	{{/if}}
{{/if}}
