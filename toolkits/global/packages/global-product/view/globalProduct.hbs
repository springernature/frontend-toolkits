<div class="c-product">
	<div class="c-product__image">
		<img src="{{image.src}}" alt="{{#if image.alt}}{{image.alt}}{{else}}cover: {{title}}{{/if}}">
	</div>
	<div class="c-product__body">
		<div class="c-product__copy">
			<h3 class="c-product__title"{{#if level}} aria-level="{{level}}"{{/if}}>
				{{#if href}}<a href="{{href}}">{{/if}}
					{{title}}{{#if subtitle}}, <em>{{subtitle}}</em>{{/if}}
				{{#if href}}</a>{{/if}}
			</h3>
			{{#if openAccess}}
				<small class="c-product__subtitle">Open access</small>
			{{/if}}
			{{#if description}}
				<div class="c-product__description">
					{{{description}}}
				</div>
			{{/if}}
		</div>
		{{#if actions}}
			<ul class="c-product__actions">
				{{#each actions}}
					<li class="c-product__actions-item">
						<a href="{{href}}"{{#if modifiers}} class="u-button{{#each modifiers}} u-button--{{.}}{{/each}}"{{/if}}>{{label}}</a>
					</li>
				{{/each}}
			</ul>
		{{/if}}
	</div>
</div>
