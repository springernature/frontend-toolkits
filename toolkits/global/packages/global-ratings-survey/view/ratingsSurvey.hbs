<aside class="u-hide u-js-show c-ratings-survey" data-ratings-survey="{{userJourneys}}" {{#if iconSize}}style="--forms--pictographic-radio-icon-size:{{iconSize}}"{{/if}}>
	<div class="c-ratings-survey__container">
		<form class="c-ratings-survey__form" action="#" method="POST" >
			<h{{headingLevel}} class="c-ratings-survey__heading">How was your experience today?</h{{headingLevel}}>
			{{#with globalFormData}}
				{{> globalFormFieldset }}
			{{/with}}
			<button class="c-ratings-survey__button" type="submit">Send feedback</button>
			<div class="u-hide c-ratings-survey__submit-message" data-ratings-survey="submit-message">
				<div>
					<svg viewBox="0 0 20 20" aria-hidden="true" focusable="false">
						<use xlink:href="{{iconUrl}}"></use>
					</svg>
					<p>{{submitMessageText}}</p>
				</div>
				{{#if questionUrl}}
					<a href="{{questionUrl}}?id={{id}}" target="_blank">{{questionText}} (open in a new tab)</a>
				{{/if}}
			</div>
		</form>
	</div>
</aside>
