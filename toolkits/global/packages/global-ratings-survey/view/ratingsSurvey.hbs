<aside class="u-hide u-js-show c-ratings-survey" data-ratings-survey=""
	   data-ratings-survey-user-journeys="{{userJourneys}}"
	   {{#if additionalInfo}}data-ratings-survey-additional-info="{{additionalInfo}}"{{/if}}>
	<div class="c-ratings-survey__container">
		<form class="c-ratings-survey__form">
			<h{{headingLevel}} class="c-ratings-survey__heading">How was your experience today?</h{{headingLevel}}>
			{{#with globalFormData}}
				{{> globalFormFieldset }}
			{{/with}}
			<button class="c-ratings-survey__button" type="submit">Send feedback</button>
			<div class="u-hide c-ratings-survey__submit-message" data-ratings-survey="submit-message">
				<div>
					<svg xmlns="http://www.w3.org/2000/svg" id="i-circle-tick" viewBox="0 0 20 20" aria-hidden="true" focusable="false" fill="#00a79d"><path d="M10 0a10 10 0 1 0 0 20 10 10 0 0 0 0-20Z"/><path d="M15 5.5a1 1 0 0 0-.8.4l-5.4 6-3.1-2.6a1 1 0 0 0-1.5.1 1 1 0 0 0 .2 1.5l3.9 3.4c.4.3 1 .3 1.4-.1l6-7c.4-.4.4-1 0-1.5a1 1 0 0 0-.8-.2Z" fill="#fff"/></svg>
					<p>Thank you for your feedback.</p>
				</div>
				{{#if questionUrl}}
					{{#if questionText}}
						<a href="{{questionUrl}}?id={{id}}" target="_blank">{{questionText}} (opens in a new tab)</a>
					{{/if}}
				{{/if}}
			</div>
		</form>
	</div>
</aside>
