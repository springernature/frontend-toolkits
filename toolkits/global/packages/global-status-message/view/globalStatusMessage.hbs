<aside class="c-status-message{{#if boxed}} c-status-message--boxed{{/if}}{{#if type}} c-status-message--{{type}}{{/if}}"{{#if liveRegion}} role="status" aria-live="polite"{{/if}}>
	{{#with iconURL}}
		<svg class="c-status-message__icon" width="24" height="24" role="img" aria-label="{{../type}}:" focusable="false">
			<use xlink:href="{{this}}"></use>
		</svg>
	{{/with}}
	{{#with message}}
		<div class="c-status-message__message" tabindex="-1"{{#if ../id}} id="{{../id}}-message"{{/if}}>
			{{{../message}}}
		</div>
	{{/with}}
</aside>
