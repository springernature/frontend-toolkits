{{#if productGroups}}
	<div class="c-footer__container">
		<div class="c-footer__grid c-footer__group--separator">
			{{#each productGroups as |siteNavItem|}}
			<div class="c-footer__group">
				<h3 class="c-footer__heading">{{siteNavItem.title}}</h3>
				<ul class="c-footer__list">
					{{#each siteNavItem.items}}
					<li class="c-footer__item"><a class="c-footer__link" href="{{this.url}}"{{#if this.dataTrackAction}} data-track="click" data-track-action="{{this.dataTrackAction}}" data-track-label="link"{{/if}}>{{this.text}}</a></li>
					{{/each}}
				</ul>
			</div>
			{{/each}}
		</div>
	</div>
{{/if}}
